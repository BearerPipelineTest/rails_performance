<link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">

<style>
  body {
    font-family: OpenSans, sans-serif;
    margin: 0;
    font-size: .8125rem;
    font-weight: 400;
    line-height: 1.5;
    color: #a6b0cf;
    text-align: left;
    background-color: #282e38;
    background: linear-gradient(45deg, #282e38, #382e38);
    display: flex;
    width: 100%;
    flex-direction: column;
    align-items: center;
  }

  .chart {
    width: 100%;
    min-height: 400px;
  }

  .card {
    min-width: 90%;
    padding: 1em 2em;
    background-color: #323a46;
    background-clip: border-box;
    border: 0 solid #32394e;
    border-radius: .25rem;
    box-shadow: 0 0.75rem 6rem rgba(56,65,74,.03);
  }

  h1 {
    text-align: center;
    color: #f6f6f6;
    font-size: 14px;
    margin: 0 0 7px 0;
    padding-top: 14px;
    padding-bottom: 14px;
  }

  p.hint {
    font-size: 10px;
    text-align: center;
    color: #aaa;
  }

  table {
    border-collapse: collapse;
    border-radius: 10px;
    overflow: hidden;
    width: 100%;
    margin: 0 auto;
    position: relative;
    border-spacing: 1;
  }
  table * {
    position: relative;
  }
  table td, table th {
    padding-left: 8px;
  }
  table thead tr {
    height: 60px;
  }
  table tbody tr {
    height: 50px;
  }
  table tbody tr:last-child {
    border: 0;
  }
  table td, table th {
    text-align: left;
  }
  table td.l, table th.l {
    text-align: right;
  }
  table td.c, table th.c {
    text-align: center;
  }
  table td.r, table th.r {
    text-align: center;
  }

  th {
    font-size: 18px;
    color: #f5f5f5;
    line-height: 1.2;
    font-weight: unset;
  }

  tbody tr {
    font-size: 15px;
    color: #f5f5f5;
    line-height: 1.2;
    font-weight: unset;
  }

  tbody tr:hover {
    color: white;
    background-color: #282e38;
  }
  table a {
    color: white;
  }

  .back_link {
    color: white;
    font-size: 20px;
  }

  .stats_icon svg {
    width: 16px;
    height: 16px;
  }

</style>
